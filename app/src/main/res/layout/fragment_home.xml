<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_header"
                android:background="@drawable/bg_bottom">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="设备列表"
                    android:textSize="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/home_margin"/>
            <EditText
                    android:id="@+id/search_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="#fff"
                    android:backgroundTint="#fff"
                    android:visibility="invisible"/>
            <Button
                    android:id="@+id/search_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_32_search"/>
            <Button
                    android:id="@+id/add_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/home_margin"
                    android:layout_marginLeft="@dimen/home_margin"
                    android:background="@drawable/ic_32_add"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <LinearLayout
                    android:id="@+id/home_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>