<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical">

        <include layout="@layout/custom_nav_bar"></include>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="专家模式"
                            android:textSize="18dp"
                            android:textColor="@color/colorTextDark"
                            android:gravity="center"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                <com.gospell.travel.ui.view.CustomSlideButton
                        android:id="@+id/expert_switch_btn"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="通知栏显示选择"
                        android:textSize="18dp"
                        android:textColor="@color/colorTextDark"
                        android:gravity="center"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                <Spinner
                        android:id="@+id/notification_dropdown_menu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_32_arrow_b"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="同步完成百分比"
                        android:textSize="18dp"
                        android:textColor="@color/colorTextDark"
                        android:gravity="center"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                <Spinner
                        android:id="@+id/sync_dropdown_menu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_32_arrow_b"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:id="@+id/nfc_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通过NFC开启设备"
                android:background="@color/defaultColor"
                android:textColor="@color/colorSuccess"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
        <Button
                android:id="@+id/wifi_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置本机连接wifi"
                android:background="@color/defaultColor"
                android:textColor="@color/colorSuccess"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>