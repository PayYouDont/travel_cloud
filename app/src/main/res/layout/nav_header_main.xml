<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.gospell.travel.ui.view.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ic_user" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                android:id="@+id/message_count_bv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                app:badge_bgColor="#1FBBAE"
                app:badge_gravity="rightTop"
                app:badge_horizontalMargin="20dp"
                app:badge_verticalMargin="0dp">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_32_tidings" />
        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:text="张三"
                android:gravity="center"
                android:textColor="@color/colorTextDark"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_bottom"/>
</LinearLayout>
